<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="/styles/site.css">
    <link rel="stylesheet" href="/styles/landing.css">
</head>
<body>

    <!-- Navigation Bar -->
    <%- include('./partials/_header.ejs') %>

    <!-- Booking Page Main Content -->
    <div class="card center-div">
        <div class="card-content">
            <div class="form">
                <form action="/create-appointment" method="post">
                    <div class="form-field">
                        <label for="userName">Username</label><br />
                        <input class="input" type="text" name="userName" id="userName" required autofocus>
                    </div>

                    <div class="form-field">
                        <label for="firstName">First Name</label><br />
                        <input class="input" type="text" name="firstName" id="firstName" required autofocus>
                    </div>
                    <div class="form-field">
                        <label for="lastName">Last Name</label><br />
                        <input class="input" type="text" name="lastName" id="lastName" required autofocus>
                    </div>

                    <div class="form-field">
                        <label for="email">Email</label><br />
                        <input class="input" type="text" name="email" id="email" required autofocus>
                    </div>

                    <div class="form-field">
                        <label for="service">Service</label><br />
                        <select name="service" id="service" class="drop-down-menu" required>
                            <% services.forEach((service) => { %>
                            <option value="<%= service.value %>"><%= service.text %></option>
                            <% }) %>
                          </select>
                    </div>

                    <div class="form-field">
                        <input type="submit" value="Book Appointment" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

    <!-- Footer -->
    <%- include('./partials/_footer.ejs') %>
</body>
</html>
